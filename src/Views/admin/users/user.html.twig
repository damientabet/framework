{% extends 'layout.html.twig' %}

{% block title %}Utilisateur {{ user.id_user }}{% endblock %}

{% block body %}
    <body id="page-top">

    <!-- Page Wrapper -->
<div id="wrapper">
    <!-- Content Wrapper -->
    <div id="content-wrapper" class="d-flex flex-column">

    <!-- Main Content -->
    <div id="content">
        <!-- Begin Page Content -->
        <div class="container-fluid">

            <div class="d-sm-flex align-items-center justify-content-between mb-4">
                <a href="/admin/users" class="d-none d-sm-inline-block btn btn-sm btn-info btn-icon-split shadow-sm">
                    <span class="icon text-white-50"><i class="fas fa-arrow-left fa-sm text-white-50"></i></span><span
                            class="text">Retour</span>
                </a>
            </div>

            <!-- Page Heading -->
            <h1 class="h3 mb-2 text-gray-800">Utilisateur #{{ user.id_user }}</h1>
            <p class="mb-4">Ici vous trouverez la liste de tous les utilisateus s'étend inscrit sur votre site. Vous
                pourrez consulter leurs informations ainsi que participer à leur gestion</p>
            <div class="row">
                <div class="col-8">
                    <div class="card border-0 shadow">
                        <div class="card-header bg-white">
                            Edition du profil
                        </div>
                        <div class="card-body">
                            <form action="/admin/users" method="POST" id="formAdmin">
                                <div class="row">
                                    <div class="col">
                                        <label for="lastname"
                                               class="ml-3 col-form-label font-weight-bold">Nom</label>
                                        <div class="col-sm-10">
                                            <input id="lastname" class="form-control" type="text" name="lastname"
                                                   value="{{ user.lastname }}">
                                        </div>
                                    </div>
                                    <div class="col">
                                        <label for="firstname"
                                               class="ml-3 col-form-label font-weight-bold">Prénom</label>
                                        <div class="col-sm-10">
                                            <input id="firstname" class="form-control" type="text" name="firstname"
                                                   value="{{ user.firstname }}">
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label for="email" class="ml-3 col-form-label font-weight-bold">Email</label>
                                    <div class="col-sm-10">
                                        <input id="email" class="form-control" type="text" name="email"
                                               value="{{ user.email }}">
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label for="password" class="col-sm-2 col-form-label font-weight-bold">Mot de
                                        passe</label>
                                    <div class="col-sm-10">
                                        <input id="password" type="password" class="form-control" name="password">
                                        <small id="emailHelp" class="form-text text-muted">Laisser ce champ vide si vous
                                            ne voulez pas modifier le mot de passe</small>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="col-sm-10">
                                        <input type="submit" name="editUser" class="btn btn-primary" value="Modifier">
                                        <input type="hidden" name="id_user" class="btn btn-primary"
                                               value="{{ user.id_user }}">
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
                <div class="card col-4">
                    <div class="card-body mt-3 text-center">
                        <img class="d-flex mx-auto" style="width: 90px; height: 90px; border-radius: 50%; object-fit: cover;" src="/img/user/{{ user.image_name }}" alt="">
                        <h4 class="card-title font-weight-bold mt-4 mb-0">{{ user.firstname }} {{ user.lastname }}</h4>
                        <p class="card-text"><small>{{ user.email }}</small></p>
                        <div class="row">
                            <p class="card-text col-6"><span class="font-weight-bold">{{ articles|length }}</span><br/> articles</p>
                            <p class="card-text col-6"><span class="font-weight-bold">{{ comments|length }}</span><br/> commentaires</p>
                        </div>
                        <p class="card-text mt-4">Inscrit depuis le {{ user.date_add|date('d/m/Y') }}</p>
                        <div class="d-sm-flex align-items-center">
                            <a href="/admin/users" class="d-none d-sm-inline-block btn btn-danger btn-icon-split shadow">
                                <span class="icon text-white-50"><i class="fas fa-trash text-white"></i></span><span
                                        class="text">Supprimer</span>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- /.container-fluid -->

    </div>
{% endblock %}