{% extends "layout.html.twig" %}

{% block title %}Accueil{% endblock %}

{% block slide %}
    <div id="indexImg" style="background-image: url('/slide/slide1.jpg'); width: 100%; height: 500px;"></div>
{% endblock %}

{% block body %}
    <ul class="list-unstyled">
        {% for article in articles %}
            {% if article.approved == 1 %}
                <a style="color: black" href="/article/{{ article.id_article }}">
                    <li class="media shadow mt-5 p-3" id="index-list">
                        <i style="font-size: 60px;" class="fas fa-blog m-3"></i>
                        <div class="media-body">
                            <h5 class="mt-0 mb-1">{{ article.title }}</h5>
                            {{ article.description|truncate(300, true)|raw }}
                            <p>{{ article.firstname }} {{ article.lastname }}</p>
                        </div>
                    </li>
                </a>
            {% endif %}
        {% endfor %}
    </ul>
{% endblock %}