<div class="mt-5">
    <h2>Commentaires</h2>
    {% for comment in comments %}
        {% if comment.approved == 1 %}
        <div class="p-3 mb-2">
            <p>{{ comment.content }}</p>
            <p>{{ comment.firstname }} {{ comment.lastname }} - {{ comment.date_add|date('d/m/Y h:i:s') }}</p>
        </div>
        {% endif %}
    {% endfor %}
    {% if session.user is defined %}
        <form action="/article/{{ article.id_article }}" class="form-group" method="POST">
            <textarea class="form-control" name="comment" id="" rows="5"></textarea>
            <input class="form-control btn btn-default shadow" type="submit" name="addComment"
                   value="Ajouter un commentaire">
        </form>
    {% else %}
        <p class="alert alert-info"><i class="fas fa-question-circle"></i> Veuillez vous connecter pour ajouter un commentaire</p>
    {% endif %}
</div>