{% extends "layout.html.twig" %}

{% block title %}Mon profil - Ajout d'un article{% endblock %}

{% block body %}
    <h1 class="mt-3">Ajouter un article</h1>
    <div class="shadow p-3 mt-3 mb-2">
        <form method="post">
            <label for="title">Titre</label>
            <input id="title" class="form-control" type="text" name="titleArticle">

            <label for="content">Description</label>
            <textarea class="form-control" name="descArticle" rows="2" maxlength="1024"></textarea>

            <label for="content">Contenu</label>
            <textarea id="mytextarea" class="form-control" name="contentArticle" cols="30" rows="10"></textarea>

            <input class="form-control btn btn-primary mt-2" type="submit" name="addArticle" value="Ajouter">
        </form>
    </div>
    <a href="javascript:history.go(-1)" class="shadow p-3 mb-5 bg-default rounded btn btn-primary"><i class="fas fa-chevron-left"></i> Retour</a>
{% endblock %}