{% extends "layout.html.twig" %}

{% block title %}Mon profil - Modification de l'article {{ article.id_article }}{% endblock %}

{% block body %}
    <h1 class="mt-3">Modification de l'article #{{ article.id_article }}</h1>
    <div class="shadow p-5 mt-3 bg-white rounded">
        <nav class="nav justify-content-end">
            <a href="/user/article" class="nav-link" title="Retour"><i class="fas fa-chevron-left align-middle"></i></a>
            <a class="nav-link" href="/article/delete/{{ article.id_article }}" title="Supprimer"><i style="color: red;" class="fas fa-trash align-middle"></i></a>
        </nav>
        <form action="/article/edit/{{ article.id_article }}" method="post">
            <label for="title">Titre</label>
            <input id="title" class="form-control" type="text" name="titleArticle" value="{{ article.title }}">

            <label id="labelDesc" for="articleDescription">Description <span id="length"></span>/1024</label>
            <textarea id="articleDescription" class="form-control" name="descArticle" rows="2" maxlength="1024">{{ article.description }}</textarea>

            <label for="content">Contenu</label>
            <textarea id="mytextarea" class="form-control" name="contentArticle" cols="30" rows="10">{{ article.content }}</textarea>

            <input class="form-control btn btn-success shadow mt-2" type="submit" name="updateArticle" value="Modifier">
        </form>
    </div>
{% endblock %}