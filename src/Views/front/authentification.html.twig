{% extends "layout.html.twig" %}

{% block title %}Authentification{% endblock %}

{% block body %}
    {% if errors %}
        {% for error in errors %}
            <p class="alert alert-danger mt-3" role="alert">
                {{ error }}
            </p>
        {% endfor %}
    {% endif %}
    <h1 class="mt-3">Créer votre compte</h1>
    <form style="min-height: 570px;" method="post">
        <div class="form-row">
            <div class="form-group col-md-6">
                <label for="create_name">Prénom</label>
                <input id="create_name" class="form-control" type="text" name="firstname" placeholder="John">
            </div>
            <div class="form-group col-md-6">
                <label for="create_name">Nom</label>
                <input id="create_name" class="form-control" type="text" name="lastname" placeholder="Doe">
            </div>
        </div>
        <div class="form-group">
            <label for="create_email">Email</label>
            <input id="create_email" class="form-control" type="email" name="email" placeholder="john@doe.com">
        </div>
        <div class="form-group">
            <label for="create_password">Mot de passe</label>
            <input id="create_password" class="form-control" type="password" name="password">
        </div>

        <button type="submit" name="addUser" class="btn btn-primary">S'enregistrer</button>
    </form>
{% endblock %}