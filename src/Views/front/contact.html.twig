{% extends 'layout.html.twig' %}

{% block title %}Contact{% endblock %}

{% block slide %}
    <div id="indexImg" style="background-image: url('/default-img/contact.jpg'); width: 100%; height: 400px;"></div>
{% endblock %}

{% block body %}
    <h1 class="mt-3 mb-2">Contact</h1>
    <div class="row">
    <div class="col-md-8">
        <form id="contactForm" action="/contact" method="POST">
            <div class="form-row">
                <div class="form-group col-md-6">
                    <label for="inputLastname">Prénom</label>
                    <input type="text" class="form-control" id="inputLastname" name="lastname" placeholder="John">
                </div>
                <div class="form-group col-md-6">
                    <label for="inputName">Nom</label>
                    <input type="text" class="form-control" id="inputName" name="firstname" placeholder="Doe">
                </div>
            </div>
            <div class="form-group">
                <label for="inputEmail">Email</label>
                <input type="email" class="form-control" id="inputEmail" name="email" placeholder="john@doe.com" required>
            </div>
            <div class="form-row">
                <div class="form-group col-md-12">
                    <label for="inputSubject">Objet du mail</label>
                    <input class="form-control" id="inputSubject" name="subject">
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-md-12">
                    <label for="inputMessage">Message</label>
                    <textarea class="form-control" id="inputMessage" name="message" rows="10"></textarea>
                </div>
            </div>
            <div class="form-group">
                <div class="form-check alert alert-info pl-5">
                    <input class="form-check-input" type="checkbox" name="rgpd" id="gridCheck">
                    <label class="form-check-label" for="gridCheck">
                        <i class="fas fa-exclamation-circle"></i> Dans le cadre du règlement général sur la protection
                        des données, j'accepte que mes données soient utilisées afin de me recontacter.
                    </label>
                </div>
            </div>
            <button type="submit" name="mailsend" class="btn btn-primary mb-4">Envoyer</button>
        </form>
    </div>
    <div class="col-md-4 mt-4">
        <div>
            <u class="font-weight-bold underline">Adresse :</u>
            <ul class="list-unstyled">
                <li>37, boulevard Alfred Wallach</li>
                <li>68200, Mulhouse</li>
            </ul>
        </div>
        <iframe style="border: 0;" src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d2683.0758255419473!2d7.342194215868785!3d47.741183486664006!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x47919ba6b138e1cb%3A0x54af0b194557ff21!2sUkoo!5e0!3m2!1sfr!2sfr!4v1469623288016" width="100%" height="280" frameborder="0"></iframe>
    </div>
    </div>
{% endblock %}